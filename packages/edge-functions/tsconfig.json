{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "rootDir": ".",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src", "dev"]
}
